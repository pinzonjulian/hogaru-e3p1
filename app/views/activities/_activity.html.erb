
<div class="row">
  <div class="columns small-12 medium-3">
    <%= activity.name %>
  </div>
  <div class="columns small-12 medium-3">
    <%= activity.date %>
  </div>
  <div class="columns small-12 medium-2">
    <%= activity.cal_burnt %>
  </div>
  <div class="columns small-12 medium-2">
    <%= activity.cal_intake %>
  </div>
  <div class="columns small-12 medium-2">
    <%= link_to "Edit", edit_activity_path(activity), class:"button small" %>
    <%= link_to "Delete", activity, method: :delete,
                                    data: { confirm: "You sure?" },
                                    class:"button small alert" %>
  </div>
</div>

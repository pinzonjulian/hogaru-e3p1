<%= form_for @activity do |f| %>
  <%= render "shared/error_messages", object: @activity %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :calories %>
  <%= f.number_field :calories %>

  <div>
    <%= f.label :burnt %>
    <%= f.check_box :burnt %>
  </div>


  <%= f.label :date %>
  <%= f.date_field :date %>

  <%= f.submit yield(:button_text), class:"button" %>

<% end %>

<%= form_for @activity do |f| %>
  <%= render "shared/error_messages", object: @activity %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :cal_burnt %>
  <%= f.number_field :cal_burnt %>

  <%= f.label :cal_intake %>
  <%= f.number_field :cal_intake %>

  <%= f.label :date %>
  <%= f.datetime_local_field :date %>

  <%= f.submit yield(:button_text), class:"button" %>

<% end %>

<h1>Activities#edit</h1>
<p>Find me in app/views/activities/edit.html.erb</p>

<!-- TODO: needs refactoring -->

<%= form_for @activity do |f| %>
  <%= render "shared/error_messages", object: @activity %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :cal_burnt %>
  <%= f.number_field :cal_burnt %>

  <%= f.label :cal_intake %>
  <%= f.number_field :cal_intake %>

  <%= f.label :date %>
  <%= f.datetime_local_field :date %>

  <%= f.submit "Update Activity", class:"button" %>

<% end %>
